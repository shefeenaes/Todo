{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/tasks", "dest": "/api/tasks.js" }
    ],
    "env": {
      "DATABASE_URL": "your-database-url-here"
    },
    "functions": {
      "api/tasks.js": {
        "memory": 256,
        "maxDuration": 10
      }
    }
  }
  